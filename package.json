{
  "name": "@architect/arc.codes",
  "scripts": {
    "push-test": "npm run spellcheck",
    "spellcheck": "npx spellchecker ./src/docs/**/*.md --no-suggestions -q -d ./scripts/dictionary.js --plugins spell indefinite-article repeated-words syntax-mentions syntax-urls",
    "start:eleventy": "eleventy --serve",
    "start": "ARC_STATIC_SPA=false npx arc sandbox & eleventy --serve --quiet"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@architect/architect": "^6.2.3",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "markdown-it-anchor": "^5.2.5",
    "slugify": "^1.3.6",
    "spellchecker-cli": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run push-test"
    }
  }
}
